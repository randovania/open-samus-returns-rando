        "item": {
            "type": "object",
            "properties": {
                "item_id": {
                    "$ref": "#/$defs/item_id"
                },
                "quantity": {
                    "type": "number"
                }
            },
            "required": [
                "item_id",
                "quantity"
            ],
            "additionalProperties": false
        },
        "position": {
            "type": "object",
            "properties": {
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "z": {
                    "type": "number"
                }
            },
            "required": [
                "x",
                "y",
                "z"
            ]
        },
        "metroid_callback": {
            "type": "object",
            "properties": {
                "scenario": {
                    "$ref": "#/$defs/scenario_name"
                },
                "spawngroup": {
                    "type": "string"
                }
            },
            "required": [
                "scenario",
                "spawngroup"
            ]
        },
        "constant_damage_value": {
            "default": null,
            "anyOf": [
                {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1000
                },
                {
                    "type": "null"
                }
            ]
